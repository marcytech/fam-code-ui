{
  "compilerOptions": {
    "baseUrl": "./src",
     "lib": [ "ES2021", "DOM" ],
    "paths": {
      "@/store": ["store/index.ts"],
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/services/*": ["services/*"],
      "@/assets/*": ["assets/*"],
      "@/tests/*": ["tests/*"],
      "@/mock/*": ["mock/*"],
    },
    "strict":true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "target": "es2018",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,

    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    // "declarationDir": "dist/types",
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node",
      "mocha",
      "chai"
    ],    
  },
  "include": ["src/**/*"],
  
}
